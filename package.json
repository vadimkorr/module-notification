{
  "name": "module-notification",
  "version": "3.0.0-rc.4",
  "description": "JS library for displaying Notifications inside specified html element containers (Modules). You can create multiple independent Modules which own separate set of Notifications.",
  "main": "src/index.js",
  "scripts": {
    "test": "karma start spec/karma.conf.js --single-run",
    "buildAndTest": "npm run build:prod && npm test",
    "build:dev": "webpack --mode development --config ./config/webpack.config.js",
    "start:dev": "npm run build:dev -- --watch",
    "build:prod": "webpack --mode production --config ./config/webpack.config.js",
    "prepublishOnly": "npm run build:prod"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vadimkorr/module-notification.git"
  },
  "keywords": [
    "notifications",
    "notification",
    "modules"
  ],
  "author": "Vadim Korr",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vadimkorr/module-notification/issues"
  },
  "homepage": "https://github.com/vadimkorr/module-notification#readme",
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@babel/plugin-transform-runtime": "^7.10.5",
    "@babel/preset-env": "^7.6.2",
    "@babel/runtime": "^7.10.5",
    "autoprefixer": "^9.8.6",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^3.2.0",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-prettier": "^3.1.1",
    "jasmine-core": "^3.5.0",
    "karma": "^5.1.1",
    "karma-chrome-launcher": "^2.2.0",
    "karma-cli": "^1.0.1",
    "karma-firefox-launcher": "^1.2.0",
    "karma-jasmine": "^3.3.1",
    "karma-phantomjs-launcher": "^1.0.4",
    "postcss-inline-svg": "^4.1.0",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.18.2",
    "sass": "^1.26.10",
    "sass-loader": "^9.0.2",
    "style-loader": "^1.0.0",
    "watchify": "^3.11.1",
